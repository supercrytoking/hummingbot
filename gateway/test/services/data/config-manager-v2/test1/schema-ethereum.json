{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "networks": {
      "type": "object",
      "patternProperties": {
        "^\\w+$": {
          "type": "object",
          "properties": {
            "chainID": { "type":  "integer" },
            "nodeURL": { "type":  "string" },
            "nativeCurrencySymbol": { "type": "string" }
          },
          "required": ["chainID", "nodeURL"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}